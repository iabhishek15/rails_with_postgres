<!DOCTYPE html>
<html>
  <head>
    <title>AppWithPgs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to 'Home', home_path, class:'navbar-brand'%>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <% if current_user %>
          <li class="nav-item active"><%= link_to "#{current_user.name}", edit_profile_path,class:'nav-link' %></li>
          <li class="nav-item active"><%= link_to 'Reset Password', reset_password_path,class:'nav-link' %></li>
          <li class="nav-item active"><%= link_to 'logout', logout_path,class:'nav-link' %></li>
        <% else %>
          <li class="nav-item active"><%= link_to 'singup', signup_path,class:'nav-link' %></li>
          <li class="nav-item active"><%= link_to 'login',  login_path,class:'nav-link' %></li>
          <li class="nav-item active"><%= link_to 'Forgot Password', forget_password_path,class:'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
<div class = 'container'>
  <div class='container mt-5'>
    <%= yield %>
  </div>
</div>
  </body>
</html>
