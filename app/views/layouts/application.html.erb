<!DOCTYPE html>
<html>
  <head>
    <title>AppWithPgs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div class = 'container'>
  <% if current_user %>
    <%= link_to "#{current_user.name}", edit_profile_path %>
    <%= link_to 'logout', logout_path %>
  <% else %>
    <%= link_to 'singup', signup_path %>
    <%= link_to 'login',  login_path %>
  <% end %>
  <div class='container mt-5'>
    <%= yield %>
  </div>
</div>
  </body>
</html>
