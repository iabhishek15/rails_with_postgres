<%= form_with(model:@user, url:update_profile_path, method: :post, local:true) do |form| %>
  <div class='errors'>
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> errors have occured!</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="mb-3">
    <%= form.label 'Profile Image',class:'form-label' %>
    <%= form.file_field :profile_image,class:'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label 'Name' %>
    <%= form.text_field :name, class:'form-control'%>
  </div>
  <div class='form-group'>
    <%= form.label 'Date of birth' %>
    <%= form.date_field :dob, class:'form-control'%>
  </div>
  <div class='form-group'>
    <%= form.label 'Mobile Number' %>
    <%= form.number_field :mobile, class:'form-control'%>
  </div>
  <%= form.submit 'Update Profile', class:'btn btn-primary'%>
<% end %>
<br />
<%= link_to 'Reset Password', reset_password_path %><br />
<%= link_to 'Delete Account', delete_account_path, method: :delete, data:{confirm:'Are you sure you want to delete your account?'} %>
