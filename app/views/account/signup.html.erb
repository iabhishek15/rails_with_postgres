<%= form_with(model:@user, url:create_path, local:true) do |form| %>
  <div class='errors'>
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> errors have occured!</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class='form-group'>
    <%= form.text_field :name, class:'form-control',placeholder:'Name' %>
  </div>
  <div class='form-group'>
    <%= form.email_field :email, class:'form-control',placeholder:'Email' %>
  </div>
  <div class='form-group'>
    <%= form.password_field :password, class:'form-control',placeholder:'Password' %>
  </div>
  <div class='form-group'>
    <%= form.password_field :password_confirmation, class:'form-control',placeholder:'Confirm Password' %>
  </div>
  <%= form.submit 'Signup', class:'btn btn-primary'%>
<% end %>
